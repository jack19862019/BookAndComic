<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TBookContentMapper">
    
    <resultMap type="TBookContent" id="TBookContentResult">
        <result property="id"    column="id"    />
        <result property="bid"    column="bid"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
    </resultMap>

    <sql id="selectTBookContentVo">
        select id, bid, title, content from t_book_content
    </sql>

    <select id="selectTBookContentList" parameterType="TBookContent" resultMap="TBookContentResult">
        <include refid="selectTBookContentVo"/>
        <where>  
            <if test="bid != null "> and bid = #{bid}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
        </where>
    </select>
    
    <select id="selectTBookContentById" parameterType="Long" resultMap="TBookContentResult">
        <include refid="selectTBookContentVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTBookContent" parameterType="TBookContent">
        insert into t_book_content
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null ">id,</if>
            <if test="bid != null ">bid,</if>
            <if test="title != null  and title != ''">title,</if>
            <if test="content != null  and content != ''">content,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null ">#{id},</if>
            <if test="bid != null ">#{bid},</if>
            <if test="title != null  and title != ''">#{title},</if>
            <if test="content != null  and content != ''">#{content},</if>
         </trim>
    </insert>

    <update id="updateTBookContent" parameterType="TBookContent">
        update t_book_content
        <trim prefix="SET" suffixOverrides=",">
            <if test="bid != null ">bid = #{bid},</if>
            <if test="title != null  and title != ''">title = #{title},</if>
            <if test="content != null  and content != ''">content = #{content},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTBookContentById" parameterType="Long">
        delete from t_book_content where id = #{id}
    </delete>

    <delete id="deleteTBookContentByIds" parameterType="String">
        delete from t_book_content where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <insert id="insertBatch" parameterType="java.util.List">
        insert into t_book_content (bid, title, content)
        values
        <foreach collection="list" item="item" index="index"
                 separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                #{item.bid,jdbcType=VARCHAR},
                #{item.title,jdbcType=VARCHAR},
                #{item.content,jdbcType=VARCHAR},
            </trim>
        </foreach>
    </insert>
</mapper>